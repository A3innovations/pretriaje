{
  "version": "q_v1.0",
  "ui": {
    "max_options": 6,
    "other_char_limit": 160,
    "show_progress": true
  },
  "start_ack": {
    "text": "Este pre-triaje solo recopila información para agilizar tu reconocimiento. Será revisado por personal sanitario.",
    "consent_checkbox": {
      "label": "Entiendo y continúo",
      "required": false,
      "version": "ack_v1"
    }
  },
  "core": [
    {
      "id": "visit_type",
      "type": "single",
      "text": "Tipo de reconocimiento",
      "options": [
        "Inicial",
        "Periódico",
        "Cambio de puesto",
        "Tras baja",
        "Otro (especificar)"
      ],
      "other": true,
      "required": true
    },
    {
      "id": "job_area",
      "type": "single",
      "text": "¿Qué describe mejor tu trabajo?",
      "options": [
        "Oficina/pantallas",
        "Almacén/logística",
        "Fábrica/producción",
        "Conducción/maquinaria",
        "Construcción/obras",
        "Otro (especificar)"
      ],
      "other": true,
      "required": true
    },
    {
      "id": "tenure",
      "type": "single",
      "text": "Tiempo en el puesto actual",
      "options": [
        "< 3 meses",
        "3–12 meses",
        "1–5 años",
        "> 5 años",
        "Otro (especificar)"
      ],
      "other": true
    },
    {
      "id": "exposures",
      "type": "multi",
      "text": "Exposiciones habituales (marca las que apliquen)",
      "options": [
        "Pantallas",
        "Cargas/esfuerzo",
        "Ruido",
        "Polvo/humos",
        "Químicos",
        "Vibración",
        "Alturas",
        "Riesgo biológico",
        "Conducción/maquinaria",
        "Temperaturas extremas",
        "Ninguna",
        "Otro (especificar)"
      ],
      "other": true,
      "required": true
    },
    {
      "id": "chronic_any",
      "type": "single",
      "text": "¿Tienes alguna condición médica crónica?",
      "options": [
        "No",
        "Sí",
        "No lo sé",
        "Prefiero no decir",
        "Otro (especificar)"
      ],
      "other": true,
      "required": true
    },
    {
      "id": "chronic_list",
      "type": "multi",
      "text": "¿Cuál(es)?",
      "options": [
        "Hipertensión",
        "Diabetes",
        "Asma/EPOC",
        "Cardiaca",
        "Neurológica",
        "Salud mental",
        "Otra (especificar)"
      ],
      "other": true,
      "showIf": {
        "question": "chronic_any",
        "equals": "Sí"
      }
    },
    {
      "id": "meds",
      "type": "single",
      "text": "¿Tomas medicación habitual?",
      "options": [
        "No",
        "Sí (especificar)",
        "A veces",
        "Otro (especificar)"
      ],
      "other": true,
      "required": true
    },
    {
      "id": "allergies",
      "type": "single",
      "text": "¿Alergias relevantes (medicamentos/latex/alimentos)?",
      "options": [
        "No",
        "Sí (especificar)",
        "No lo sé",
        "Otro (especificar)"
      ],
      "other": true,
      "required": true
    },
    {
      "id": "sick_leave_6m",
      "type": "single",
      "text": "¿Has estado de baja en los últimos 6 meses?",
      "options": [
        "No",
        "Sí (motivo)",
        "Prefiero no decir",
        "Otro (especificar)"
      ],
      "other": true
    },
    {
      "id": "symptoms_recent",
      "type": "multi",
      "text": "En las últimas semanas, ¿has tenido alguno de estos síntomas?",
      "options": [
        "Ninguno",
        "Dolor lumbar",
        "Dolor cervical",
        "Dolor articular",
        "Mareos",
        "Falta de aire",
        "Dolor torácico",
        "Palpitaciones",
        "Cansancio intenso",
        "Ansiedad/estrés",
        "Otro (especificar)"
      ],
      "other": true,
      "required": true
    },
    {
      "id": "redflag_chestpain_now",
      "type": "single",
      "text": "Ahora mismo, ¿tienes dolor torácico o dificultad respiratoria importante?",
      "options": [
        "No",
        "Sí",
        "No estoy seguro",
        "Otro (especificar)"
      ],
      "other": true,
      "required": true,
      "redFlagIf": [
        "Sí",
        "No estoy seguro"
      ]
    },
    {
      "id": "sleepiness",
      "type": "single",
      "text": "¿Somnolencia que interfiera en el trabajo?",
      "options": [
        "No",
        "A veces",
        "Frecuente",
        "Sí, me preocupa",
        "Otro (especificar)"
      ],
      "other": true,
      "redFlagIf": [
        "Frecuente",
        "Sí, me preocupa"
      ]
    },
    {
      "id": "smoking",
      "type": "single",
      "text": "Tabaco",
      "options": [
        "No fumo",
        "Exfumador",
        "Ocasional",
        "Diario",
        "Otro (especificar)"
      ],
      "other": true
    }
  ],
  "closing": [
    {
      "id": "final_notes",
      "type": "text",
      "text": "¿Algo más que quieras comentar al médico? (opcional)",
      "placeholder": "Escribe aquí…",
      "maxChars": 200
